# Server
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Supabase (get from https://supabase.com -> Project Settings -> API)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# JWT - use same JWT secret as Supabase (Project Settings -> API -> JWT Secret)
JWT_SECRET=your-supabase-jwt-secret-here

# Google Safe Browsing API Key (optional, leave blank to use heuristic scanner)
GOOGLE_SAFE_BROWSING_KEY=

# Upload settings
MAX_FILE_SIZE_MB=50
UPLOAD_DIR=./uploads
